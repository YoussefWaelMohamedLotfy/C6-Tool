{
   "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
   "tasks": [
     {
       "name": "commit-message-linter",
       "command": "husky",
       "args": [
         "exec",
         ".husky/csx/commit-lint.csx",
         "--args",
         "${args}"
       ]
     },
	{
      "name": "run-csharpier",
      "command": "dotnet",
      "args": [ "csharpier", "format", "${staged}" ],
      "include": [
        "**/*.cs",
        "**/*.csx",
        "**/*.csproj",
        "**/*.props",
        "**/*.targets",
        "**/*.xml",
        "**/*.config"
      ]
    }
   ]
}
